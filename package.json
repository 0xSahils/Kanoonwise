{
  "name": "kanoonwise-fullstack",
  "version": "1.0.0",
  "description": "KanoonWise - Legal Services Platform",
  "main": "backend/src/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm install --production=false",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "heroku-postbuild": "npm run build",
    "render-build": "npm install && cd backend && npm install && cd ../frontend && npm install && npx vite build && cd .. && npm run build:backend"
  },
  "keywords": [
    "legal",
    "lawyers",
    "appointments",
    "consultation"
  ],
  "author": "KanoonWise Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
